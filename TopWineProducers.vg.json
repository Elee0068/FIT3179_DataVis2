{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
  "title": ["Global Wine Consumption in 2022", "(Measured in mhl)"],
  "width": 800,
  "height": 300,
  "padding": {"left": -230, "top": 20, "right": -200, "bottom": 5},
  "config": {
    "view": {
       "stroke": "transparent"
    }
  },
  
  "layer": [{
  "data": {
    "url": "https://raw.githubusercontent.com/Elee0068/FIT3179_DataVis2/main/wineprodpieconsume.csv" 
  },
  "encoding": {
    "theta": {"field": "mhl", "type": "quantitative", "stack": true, "sort": "ascending"},
    "color": {
      "condition": {
        "selection": "pts",
        "field": "Country", "type": "nominal", "legend": null, 
        "scale": {
          "domain": ["Italy", "Germany", "France", "Argentina","USA", "UK", "Spain", "Russia", "PRC (China)", "Others"], 
          "range": ["#70002A","#7e002f","#881c39","#95354f","#a34f65","#b0687b","#bd8191","#ca9aa7","#d7b3bd", "#f2e4b7"]
        }
      }, "value": "lightgray"
    }
  },

  "layer": [{
    "selection": {
      "pts": {"type": "single", "on": "click"}
    },
    "mark": {"type": "arc", "outerRadius": 90, "innerRadius": 50,  
              "padAngle": 0.02, "cornerRadius": 3},
    "encoding":{
      "tooltip": [{"field": "mhl", "type": "quantitative"}]
    }          
  }, {
    "mark": {"type": "text", "radius": 120},
    "encoding": {
      "text": {"field": "Country", "type": "nominal"}
    }
  },{
    "mark": {"type": "text", "fontSize": 20, "fontWeight": "bold"},
    "encoding": {
      "text": {
        "condition":{
          "selection": "pts",
          "field": "mhl", "type": "quantitative", "stack": true
        }
      }
    }
  }]}, {
    "data": {"url": "https://raw.githubusercontent.com/Elee0068/FIT3179_DataVis2/main/wineprodpieconsume.csv"},
    "transform": [
      {"aggregate": [{"op": "sum", "field": "mhl", "as": "total"}]}
    ],

    "layer": [{
      "mark": {"type": "rect","width": 80,"height": 30,"fill": "white"},
      "encoding": {
        "x": {"value": 400},
        "y": {"value": 150},
        "opacity":{
          "condition":{
              "selection": "pts"
            }, "value": 0
          }
      }
    },{
      "mark": {"type": "text", "fontSize": 20, "fontWeight": "bold"},
          "encoding": {
            "text": {
                "condition":{
                    "selection": "pts",
                    "field": "total", "type": "quantitative", "stack": true
                  }
                },
            "color": {"value": "black"}
      }
    }]
    
  }
]
}
